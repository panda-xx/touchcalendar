	Element.setStyle($('<%= @nextDays[i].strftime("%Y%m%d") %>'),
	      {
	       "width" : popupWidth  + "px",
           "top"   : "0px",
           "left"  : popupWidth * <%= i %> + "px"});
    if ( parseFloat(Element.getStyle($('<%= @nextDays[i].strftime("%Y%m%d") %>'), "height")) > popupHeight ){ 
