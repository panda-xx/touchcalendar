        if (queryStr == '' || this.value == 'adding...'){
            return;
        }
        $('text' + '<%= @nextDays[i].strftime("%Y%m%d") %>').value = '';
        this.value = 'adding...';
        queryStr = 'todo_text=' + queryStr;
